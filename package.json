{
  "name": "@friends-library/styleguide",
  "version": "1.0.0",
  "description": "Friends Library document styleguide",
  "repository": "github:friends-library-dev/styleguide",
  "author": "Jared Henderson <jared@netrivet.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "npm run watch:frags & parcel ./src/index.html",
    "build:frags": "fldev tsnode ./src/build-frags.ts",
    "watch:frags": "npm run build:frags -- --watch",
    "build": "npm run build:frags && parcel build ./src/index.html",
    "test": "true",
    "lint": "fldev lint",
    "lint:fix": "fldev lint:fix",
    "ts:check": "fldev ts:check",
    "format": "fldev format"
  },
  "dependencies": {
    "@friends-library/adoc-convert": "^1.1.2",
    "@friends-library/doc-css": "^1.1.1",
    "@friends-library/doc-html": "^1.1.1",
    "@friends-library/types": "^1.1.1",
    "react": "16.10.1",
    "react-dom": "16.10.1",
    "styled-components": "^4.0.2"
  },
  "devDependencies": {
    "@friends-library/dev": "^4.0.8",
    "@types/styled-components": "4.1.8",
    "chokidar": "^3.4.2",
    "glob": "^7.1.6",
    "lodash": "^4.17.20",
    "parcel": "^1.12.4"
  }
}
